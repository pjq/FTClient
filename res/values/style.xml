<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FTClienttheme" parent="android:Theme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ResponseTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyleCommonTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/font_text_white</item>
    </style>

    <style name="TextViewStyleCommonBarTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/font_text_white</item>
    </style>

    <style name="TextViewStyleCommonBarLeftButton">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/font_text_white</item>
    </style>

    <style name="Tab_Text_Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/font_text_deep_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Tab_Cover_Btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">3dip</item>
        <item name="android:background">@drawable/ic_mouse_foucs</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">7dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:layout_marginLeft">11dip</item>
        <item name="android:layout_marginRight">11dip</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:background">@drawable/selector_blue_btn_mid</item>
    </style>
    <style name="CommonEditTextStyle">
        <item name="android:background">@drawable/shape_edittext</item>
    </style>

</resources>